<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:cacheColorHint="@android:color/transparent"
    android:clickable="false"
    android:orientation="horizontal"
    android:paddingBottom="1dp"
    android:paddingLeft="10dp"
    android:paddingRight="0dp"
    android:paddingTop="1dp" >

    <TextView
        android:id="@+id/cPlayerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:singleLine="true"
        android:text="PlayerName"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_alignEnd="@+id/cTeamDetails"
        android:layout_alignRight="@+id/cTeamDetails" />

    <TextView
        android:id="@+id/cNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="12sp"
        android:text="##"
        android:textSize="12sp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/cPlayerName"
        android:layout_toRightOf="@+id/cPlayerName"/>

    <TextView
        android:id="@+id/cRole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="PlayerName"
        android:textSize="12sp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/cNumber"
        android:layout_toRightOf="@+id/cNumber"
        android:paddingLeft="12sp" />

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/playerImage"
        android:layout_alignTop="@+id/cRole"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/bplayer1"
        android:maxHeight="48dp"
        android:maxWidth="48dp" />

    <TextView
        android:id="@+id/cCards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="12sp"
        android:layout_below="@+id/cPlayerName"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/cSubstitution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="12sp"
        android:layout_below="@+id/cCards"
        android:layout_alignParentLeft="true" />

</RelativeLayout>